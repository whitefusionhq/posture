{% last_source = nil %}
{% @posts.each do |post| %}
  {% show_source = post.source != last_source %}
  {% last_source = post.source %}
  {%@ PostComponent post: post, show_source: show_source %}
{% end %}

{%@ ReadMoreComponent id: "timeline-read-more", url: root_path(last_source_id: @posts.last.source_id) do %}
  Load More
{%@ %}